{
    "name": "danielbannert",
    "version": "0.0.0",
    "private": true,
    "description": "My personal website",
    "author": {
        "name": "Daniel Bannert",
        "email": "d.bannert@anolilab.de",
        "url": "https://www.danielbannert.com"
    },
    "type": "module",
    "scripts": {
        "build": "tsc && vite build",
        "postbuild": "react-snap",
        "build:github-list": "esno ./bin/generate-github-projects-list.ts",
        "clean": "rimraf node_modules dist",
        "commit": "cz",
        "dev": "esno ./server",
        "lint": "pnpm run lint:text && pnpm run lint:prettier && pnpm run lint:eslint",
        "lint:eslint": "eslint . --ext js,cjs,mjs,ts,tsx,json,yaml,yml,md,mdx --max-warnings=0 --config .eslintrc.cjs",
        "lint:eslint:fix": "pnpm run lint:eslint --fix",
        "lint:types": "tsc --noEmit --skipLibCheck --pretty",
        "lint:prettier": "prettier --config=.prettierrc.cjs '**/*.{js,jsx,tsx,ts,less,md,json}'",
        "lint:prettier:fix": "prettier --config=.prettierrc.cjs --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
        "lint:staged": "lint-staged --verbose --concurrent false --debug",
        "lint:text": "textlint ./.github/ISSUE_TEMPLATE/** ./README.md ./UPGRADE.md --parallel --experimental --dry-run",
        "lint:text:fix": "textlint ./.github/ISSUE_TEMPLATE/** ./README.md ./UPGRADE.md --parallel --experimental --fix",
        "prepare": "is-ci || (node verify-node-version.cjs && pnpx only-allow pnpm && husky install)",
        "prod": "pnpm run build && pnpm run server:prod",
        "serve": "vite preview",
        "server:prod": "cross-env NODE_ENV=production esno ./server",
        "test": "vitest run",
        "test:coverage": "vitest run --coverage"
    },
    "dependencies": {
        "@headlessui/react": "^1.7.17",
        "@icons-pack/react-simple-icons": "^9.0.1",
        "@octokit/rest": "^20.0.2",
        "@phosphor-icons/react": "^2.0.13",
        "clsx": "^2.0.0",
        "compression": "^1.7.4",
        "esno": "^0.17.0",
        "express": "^4.18.2",
        "nprogress": "^0.2.0",
        "react": "18.2.0",
        "react-animated-cursor": "^2.10.1",
        "react-canvas-confetti": "^1.4.0",
        "react-dom": "18.2.0",
        "react-helmet-async": "^1.3.0",
        "react-responsive": "^9.0.2",
        "tailwind-merge": "^1.14.0",
        "vite-plugin-svgr": "^4.1.0"
    },
    "devDependencies": {
        "@anolilab/eslint-config": "^14.0.17",
        "@anolilab/lint-staged-config": "^2.0.13",
        "@anolilab/prettier-config": "^5.0.11",
        "@anolilab/semantic-release-preset": "^8.0.0",
        "@anolilab/textlint-config": "^8.0.13",
        "@arthurgeron/eslint-plugin-react-usememo": "^2.0.1",
        "@babel/core": "^7.23.0",
        "@commitlint/cli": "^17.7.2",
        "@commitlint/config-conventional": "^17.7.0",
        "@tailwindcss/typography": "^0.5.10",
        "@tsconfig/node18": "^18.2.2",
        "@tsconfig/strictest": "^2.0.2",
        "@types/compression": "^1.7.3",
        "@types/express": "^4.17.18",
        "@types/gravatar": "^1.8.4",
        "@types/lodash.capitalize": "^4.2.7",
        "@types/node": "^20.8.0",
        "@types/nprogress": "^0.2.1",
        "@types/react": "^18.2.24",
        "@types/react-dom": "^18.2.8",
        "@types/react-helmet": "6.1.7",
        "@typescript-eslint/eslint-plugin": "^6.7.3",
        "@typescript-eslint/parser": "^6.7.3",
        "@vitejs/plugin-react": "^4.1.0",
        "@vitest/coverage-v8": "^0.34.6",
        "commitizen": "^4.3.0",
        "cross-env": "^7.0.3",
        "cssnano": "^6.0.1",
        "eslint": "^8.50.0",
        "eslint-plugin-deprecation": "^2.0.0",
        "eslint-plugin-editorconfig": "^4.0.3",
        "eslint-plugin-import": "npm:eslint-plugin-i@^2.28.1",
        "eslint-plugin-jsx-a11y": "^6.7.1",
        "eslint-plugin-mdx": "^2.2.0",
        "eslint-plugin-react": "7.33.2",
        "eslint-plugin-react-hooks": "4.6.0",
        "eslint-plugin-ssr-friendly": "^1.2.0",
        "eslint-plugin-tailwindcss": "^3.13.0",
        "eslint-plugin-validate-jsx-nesting": "^0.1.1",
        "eslint-plugin-vitest": "^0.3.1",
        "eslint-plugin-vitest-globals": "^1.4.0",
        "husky": "^8.0.3",
        "is-ci": "^3.0.1",
        "lint-staged": "^14.0.1",
        "postcss": "^8.4.31",
        "postcss-cli": "^10.1.0",
        "postcss-focus-visible": "^9.0.0",
        "postcss-import": "^15.1.0",
        "postcss-lightningcss": "1.0.0",
        "prettier": "^3.0.3",
        "rimraf": "^5.0.5",
        "semantic-release": "^22.0.5",
        "serve": "^14.2.1",
        "sirv": "^2.0.3",
        "sort-package-json": "^2.6.0",
        "tailwindcss": "^3.3.3",
        "tailwindcss-font-inter": "^3.0.1",
        "textlint": "^13.3.3",
        "typescript": "^5.2.2",
        "vike": "^0.4.142",
        "vite": "^4.4.9",
        "vite-plugin-favicon2": "^1.1.5",
        "vite-plugin-image-optimizer": "^1.1.7",
        "vite-plugin-static-copy": "^0.17.0",
        "vitest": "^0.34.6"
    },
    "anolilab": {
        "eslint-config": {
            "plugin": {
                "tsdoc": false,
                "testing-library-dom": false,
                "testing-library-react": false,
                "etc": false
            },
            "warn_on_unsupported_typescript_version": false,
            "info_on_disabling_jsx_react_rule": false,
            "info_on_disabling_prettier_conflict_rule": false,
            "info_on_disabling_jsonc_sort_keys_rule": false,
            "info_on_found_react_version": false
        }
    },
    "packageManager": "pnpm@8.7.0",
    "engines": {
        "node": ">=18.* <=20.*"
    },
    "reactSnap": {
        "source": "dist"
    },
    "pnpm": {
        "overrides": {
            "got@<11.8.5": ">=11.8.5",
            "jpeg-js@<0.4.4": ">=0.4.4",
            "trim@<0.0.3": ">=0.0.3",
            "chrono-node@<2.2.4": ">=2.2.4",
            "moment@>=2.18.0 <2.29.4": ">=2.29.4",
            "xml2js@<0.5.0": ">=0.5.0",
            "http-cache-semantics@<4.1.1": ">=4.1.1",
            "sharp@<0.30.5": ">=0.30.5",
            "minimist@<0.2.1": ">=0.2.1",
            "tough-cookie@<4.1.3": ">=4.1.3",
            "word-wrap@<1.2.4": ">=1.2.4",
            "semver@<5.7.2": ">=5.7.2",
            "jpeg-js@<0.4.0": ">=0.4.0",
            "load-tsconfig": "^0.2.5",
            "tsconfig-paths": "^4.2.0",
            "cosmiconfig-typescript-loader": "^5.0.0",
            "minimist@<0.2.4": ">=0.2.4"
        }
    }
}
